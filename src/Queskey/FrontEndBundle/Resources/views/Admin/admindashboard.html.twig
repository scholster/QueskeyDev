{% set loggedInUser = app.session.get('User') %}
{% block title %}Admin Dashboard{% endblock %}



{% block javascript %}
<script type='text/javascript' src="{{ asset('js/jquery.js') }}"></script>
<script type='text/javascript' src="{{ asset('js/admindashboard.js') }}" ></script>
{% endblock %}



{% block body %}
<h1>Welcome to the Admin Dashboard page</h1>
{{ dump(loggedInUser) }}
<br><br>



{% block logout_button%}

<a href="{{ path('logout') }}"><b>logout</b></a><br><br><br>

{% endblock %}



Click to view courses created by you:
<br>
<button type="button" class="list" id="course_list">Course List</button>
<div id="course_view">

</div>


<div id="createcourse" class="course_box">
<pre>
<form id="course_form" name = "CourseDetails">
Course Name  : <input class="course_name" type="text" id="cname" name="coursename">

Category     : <select id="category" name="category">
    {% for categories in category %}
  <option value={{ categories.id }} > {{ categories.name }} </option>
  {% endfor %}
</select>

Sub-Category : <select id="subcategory" name="subcategory">
    {% for subcategories in subcategory %}
  <option value={{ subcategories.id }} > {{ subcategories.name }} </option>
  {% endfor %}
</select>

Description  : <br><textarea rows="4" cols="50" name="description" id="course_desc"></textarea>
<div class="submit">
<button type="button" class="submit_box" id="submit_btn">Create Course</button><br><br><br><br>
</div>
</form>
</pre>
    </div>



{% block paymentplan_button %}

<a href="{{ path('admin_createpplanview') }}"><b>Click here to generate Payment Plan</b></a><br><br>

{% endblock %}



{% block update_paymentplan_button %}

<a href="{{ path('admin_updatepplanview') }}"><b>Click here to update a Payment Plan</b></a><br><br>

{% endblock %}



{% endblock %}
