{% set loggedInUser = app.session.get('User') %}
{% block title %}Admin Payment Plan Updation{% endblock %}



{% block javascript %}
<script type='text/javascript' src="{{ asset('js/jquery.js') }}"></script>
<!--<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>-->
<script src="{{ asset('js/admin_payment_plan_update.js') }}" type="text/javascript"></script>
{% endblock %}



{% block body %}
<h1>Welcome to the PaymentPlanUpdation page</h1>
{{ dump(loggedInUser) }}
<br><br>



{% block logout_button%}

<a href="{{ path('logout') }}"><b>logout</b></a><br><br><br>

{% endblock %}



Click to view courses created by you:

<br>
<button type="button" id="course_pay_lists">Click here to select the course for which you want to update payment plan</button>
<div id="course_pay">

</div>


<div id="createpayment" class="payment_box">
<pre>
<form id="paymentplan_form">
Price  : <input class="price" type="text" id="course_price">

Expiry Time Limit     : <select id="expirytime" >
   <option value="30" >30 days</option>
   <option value="60" >60 days</option>
   <option value="90" >90 days</option>
   <option value="180" >180 days</option>
   <option value="365" >1 year</option>
   <option value="545" >1.5 years</option>
   <option value="730" >2 years</option>
</select>



Discount(in %age) : <input type="text" id="discount"></input>

Re-subscription price* : <input type="text" id="resub_price"></input>
(*amount to be paid on expiry of a course)


Descrition  : <br><textarea rows="4" cols="50" name="description" id="payment_desc"></textarea>
<div class="submit">
<button type="button"  id="update_paymentplan_btn">Update PaymentPlan</button><br><br><br><br>
</div>
</form>
</pre>
    </div>



{% block paymentplan_button %}

<a href="{{ path('admin_createpplanview') }}"><b>Click here to generate Payment Plan</b></a><br><br>

{% endblock %}



{% endblock %}
